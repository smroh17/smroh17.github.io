<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#90DBDB"
    tools:context=".SignupPage">

    <TextView
        android:id="@+id/signup_tv"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Sign up for BookX"
        android:fontFamily = "@font/rasa_bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop ="10dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/intro_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_marginStart="60dp"
        android:layout_marginEnd = "60dp"
        android:textColor = "#FFFFFF"
        android:fontFamily = "@font/rasa_regular"
        android:text="Create a profile, connect with fellow students in your university to join our community!"
        />


    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_weight="1"
        android:textColor = "#FFFFFF"
        android:fontFamily = "@font/rasa_regular"
        android:text="Name" />

    <EditText
        android:id="@+id/name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:inputType="textPersonName"
        android:fontFamily = "@font/rasa_regular"
        android:text="" />

    <TextView
        android:id="@+id/email_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_weight="1"
        android:textColor = "#FFFFFF"
        android:fontFamily = "@font/rasa_regular"
        android:text="Email" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:inputType="textEmailAddress"
        android:fontFamily = "@font/rasa_regular"
        android:text="" />

    <Button
        android:id="@+id/verification_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Verify Email"
        android:textColor="#FFFFFF"
        android:fontFamily = "@font/rasa_bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button" />

    <TextView
        android:id="@+id/pw_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_weight="1"
        android:textColor = "#FFFFFF"
        android:fontFamily = "@font/rasa_regular"
        android:text="Password" />

    <EditText
        android:id="@+id/pw_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:inputType="textPassword"
        android:fontFamily = "@font/rasa_regular"
        android:text="" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_weight="1"
        android:textColor = "#FFFFFF"
        android:fontFamily = "@font/rasa_regular"
        android:text="Address" />

    <EditText
        android:id="@+id/address_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:inputType="textPostalAddress"
        android:fontFamily = "@font/rasa_regular"
        android:text="" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:layout_marginStart="150dp"
        android:layout_marginEnd = "150dp"
        android:layout_marginBottom="30dp"
        android:fontFamily = "@font/rasa_bold"
        android:background="@drawable/button" />

</LinearLayout>